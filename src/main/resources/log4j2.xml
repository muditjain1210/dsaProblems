<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="&lt;%-4p&gt; %d{dd-MMM-yyyy::HH:mm:ss.SSS} %C{1} %t: - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.mudit" level="debug" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuration>